      table.table.table-striped
        thead
          tr
            th #
            th 氏名
            th 生年月日
            th 組織
            th 
        tbody
          tr
            td 1,001
            td 山田太郎
            td 1999-11-22
            td A社
            td 
              a.btn.btn-info(href="#").mr-1 Edit
              a.btn.btn-danger(href="#") Delete
